{
  "name": "uswds-sandbox",
  "private": true,
  "author": "18F",
  "license": "CC0-1.0",
  "scripts": {
    "dev": "webpack --progress --hide-modules",
    "watch": "webpack --watch --progress --hide-modules",
    "prod": "webpack --no-progress --hide-modules",
    "prepare": "npm run federalist",
    "federalist": "./build.sh && npm run uswds-copy-assets && npm run prod && npm run uswds-build-sass",
    "serve": "bundle exec jekyll serve --livereload",
    "startup": "npm install && npm update uswds && npm run uswds-install && npm run uswds-build && gem install bundler && bundle install && npm run uswds-mkdir && npm run uswds-copy-assets && npm run uswds-copy-project && npm run uswds-build-sass",
    "uswds-install": "npm explore uswds -- npm install --only=dev",
    "uswds-build": "npm explore uswds -- npm run build",
    "uswds-update": "npm update uswds && npm run uswds-install && npm run uswds-build",
    "uswds-copy-assets": "npm run uswds-mkdir && npm run uswds-copy-fonts && npm run uswds-copy-img",
    "uswds-copy-fonts": "cp -R ./node_modules/uswds/dist/fonts/* ./assets/fonts/uswds",
    "uswds-copy-img": "cp -R ./node_modules/uswds/dist/img/* ./assets/img/uswds",
    "uswds-copy-project": "cp -R ./node_modules/uswds/dist/scss/project/* ./_sass",
    "uswds-mkdir": "mkdir -p assets/fonts/uswds && mkdir -p assets/img/uswds && mkdir -p _sass",
    "uswds-build-sass": "gulp build-sass",
    "uswds-build-app": "gulp build-app",
    "uswds-watch": "gulp watch"
  },
  "dependencies": {
    "autoprefixer": "^8.6.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.28.7",
    "css-mqpacker": "^6.0.2",
    "cssnano": "^3.10.0",
    "del": "^3.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "gulp": "^3.9.1",
    "gulp-gzip": "^1.4.2",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^0.6.1",
    "gulp-sass": "^3.1.0",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-watch": "^5.0.1",
    "path": "^0.12.7",
    "postcss": "^6.0.23",
    "postcss-loader": "^2.1.6",
    "postcss-uncss": "^0.16.1",
    "style-loader": "^0.20.3",
    "uncss": "^0.16.2",
    "url-loader": "^1.1.1",
    "uswds": "github:uswds/uswds#release-2.0",
    "webpack": "^3.8.1"
  },
  "devDependencies": {
    "ajv": "^6.5.3",
    "webpack-cli": "^3.1.0"
  }
}
